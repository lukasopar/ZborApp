@model ZborApp.Models.RepozitorijViewModels.RepozitorijZborViewModel
@using ZborData.Model;
@{
    ViewData["Title"] = "Repozitorij";
}
    <head>
        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
        <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet"/>
    </head>
    <body>
        @if (true)
        {
            <div class="container">
                Dodaj datoteku
                <form enctype="multipart/form-data" method="post">
                    <dl>
                        <dt>
                            <label asp-for="FormFiles"></label>
                        </dt>
                        <dd>
                            <input asp-for="FormFiles" type="file" multiple>
                            <span asp-validation-for="FormFiles"></span>
                        </dd>
                    </dl>
                    <input asp-action="UploadZbor" class="btn" type="submit" value="Dodaj" />
                </form>
            </div>
        }


        <div class="container">
            <table id="datoteke" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Naziv</th>
                        <th>Datum postavljanja</th>
                        @if (Model.IdTrazeni == Model.IdKorisnik)
                        {
                            <th>Vidljivost</th>
                            <th>Akcije</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var datoteka in Model.Datoteke)
                    {
                        <tr>

                            <td><a asp-action="GetZbor" asp-route-id="@datoteka.Id"><img alt="fileicon" src="@datoteka.GetSlika()" style="width:20px; height:40px" /><span class="name" data-id="@datoteka.Id" id="Naziv-@datoteka.Id">@datoteka.GetNaziv()</span>.@datoteka.GetEkstenzija()</a></td>
                            <td>@datoteka.DatumPostavljanja.ToString("dd.MM.yyyy hh:mm")</td>
                            @if (Model.IdTrazeni == Model.IdKorisnik)
                            {
                                <td>
                                    @if (datoteka.Privatno)
                                    {
                                        <div id="Privatno-@datoteka.Id">
                                            <span style="color:blue">Privatno</span> <button class="btn btn-sm btn-outline-info" onclick="objavi('@datoteka.Id')">Objavi</button>
                                        </div>
                                        <div id="Javno-@datoteka.Id" style="display:none">
                                            <span style="color:blue">Javno</span> <button class="btn btn-sm btn-outline-info" onclick="privatiziraj('@datoteka.Id')">Sakrij</button>
                                        </div>
                                    }
                                    else
                                    {
                                        <div id="Privatno-@datoteka.Id" style="display:none">
                                            <span style="color:blue">Privatno</span> <button class="btn btn-sm btn-outline-info" onclick="objavi('@datoteka.Id')">Objavi</button>
                                        </div>
                                        <div id="Javno-@datoteka.Id">
                                            <span style="color:blue">Javno</span> <button class="btn btn-sm btn-outline-info" onclick="privatiziraj('@datoteka.Id')">Sakrij</button>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-info" onclick="getDialog('@datoteka.Id')"><i class="fa fa-link"></i>Podijeli poveznicu</button>
                                    <button class="btn btn-sm btn-outline-info edit" data-id="@datoteka.Id"><i class="fa fa-pencil-square-o"></i>Preimenuj</button>
                                    <form asp-action="DeleteZbor"><input asp-for="IdTrazeni" style="display:none" value="@datoteka.Id" /><button class="btn btn-sm btn-outline-danger" type="submit"><i class="fa fa-trash-o"></i>Obriši</button></form>
                                </td>
                            }



                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div id="dialog" title="Poveznica" style="display:none">
            <p id="textdialog"></p>
        </div>

    </body>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/RepZbor.js"></script>
    <script>
        $(document).ready(function() {
            $('#datoteke').DataTable();
        });
        bindEdit();
    </script>
}