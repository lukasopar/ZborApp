        }
    </script>
    <script src="~/js/jquery.magicsearch.js"></script>

    <script>
            var dataSource = [
                        @foreach(var projekt in Model.Projekti)
                        {
                            <text>{ id: '@projekt.Id', firstName: '@Html.Raw(projekt.Naziv)'},</text>
                        }
            ];
            $('#basic').magicsearch({
                    dataSource: dataSource,
                    fields: ['firstName'],
                    id: 'id',
                    format: '%firstName%',
                    multiple: true,
                    multiField: 'firstName',
                    multiStyle: {
