@model ZborApp.Models.ZborViewModels.ProjektViewModel;
@using ZborData.Model;
@{
    ViewData["Title"] = "Projekt";
}


<div class="container-wrap">
    <div class="container-wrap" style="margin-left:50px; padding-top:50px">
        <h2>@ViewData["Title"]</h2>
        <div class="row">
            <div class="col-md-6">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-bold" asp-for="Projekt.Naziv">Naziv:</label> <text>@Model.Projekt.Naziv</text>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label  class="font-weight-bold">Vrsta podjele:</label> <text>@Model.Projekt.IdVrstePodjeleNavigation.Podjela</text>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-bold" asp-for="Projekt.DatumPocetka">Datum početka:</label>  <text>@Model.Projekt.DatumPocetka.ToLongDateString()</text>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label class="font-weight-bold" asp-for="Projekt.Opis">Opis:</label>
                            <text >@Model.Projekt.Opis</text>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="container-wrap">
    <div class="container-wrap" style="margin-left:50px; padding-top:50px">
        <h5>Aktivni događaji</h5>

        @foreach (Dogadjaj dogadjaj in Model.AktivniDogadjaji)
        {
            <div class="row">
                <div class="col-md-8">
                    @dogadjaj.Naziv (@dogadjaj.Lokacija) @dogadjaj.DatumIvrijeme - @dogadjaj.DatumIvrijemeKraja
                    

                </div>
                <div class="col-md-4">
                    @if (Model.Admin)
                    {
                        <a class="btn btn-sm btn-outline-secondary" asp-action="UrediDogadjaj" asp-route-id="@dogadjaj.Id">Uredi</a> <a class="btn btn-sm btn-outline-secondary" asp-action="ObrisiDogadjaj" asp-route-id="@dogadjaj.Id">Obriši</a>
                    }
                </div>
            </div>
        }

        <h5>Prošli događaji</h5>

        @foreach (Dogadjaj dogadjaj in Model.ProsliDogadjaji)
        {
            <div class="row">
                <div class="col-md-12">
                    @dogadjaj.Naziv (@dogadjaj.Lokacija) @dogadjaj.DatumIvrijeme - @dogadjaj.DatumIvrijemeKraja
                    @if(Model.Admin)
                    {
                        <a asp-action="UrediDogadjaj" asp-route-id="@dogadjaj.Id">Uredi</a> <a asp-action="ObrisiDogadjaj" asp-route-id="@dogadjaj.Id">Obriši</a>
                    }

                </div>
            </div>
        }
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Prijava</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <span><text>Prijavljujete se za projekt </text><text id="imeProjekta"></text></span>
                            <p id="idProjekta" hidden></p>
                            <div class="form-group">
                                <label for="message-text" class="col-form-label">Poruka za voditelja:</label>
                                <textarea class="form-control" id="poruka"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvori</button>
                        <button type="button" class="btn btn-primary" onclick="prijavaAjax()">Prijavi se</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="../../Scripts/jquery-1.3.2.min.js" language="javascript" type="text/javascript"></script>
    <script src="../../Scripts/jquery-ui-1.7.1.custom.min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#datePicker')
                .datepicker({
                    format: 'dd/mm/yyyy',
                    autoClose: true,
                    minView: 2,

                })
                .on('changeDate', function (e) {
                    // Revalidate the date field

                    $(this).datepicker('hide');

                    //$('#eventForm').formValidation('revalidateField', 'date');
                })
                .datepicker('setStartDate', 'new Date');



        });
    </script>
    <script>
        var dates = $("input[id$='dpFrom'], input[id$='dpTo']");
        $('#clearDates').on('click', function () {
            document.getElementById("proba").value = "";
        });

        /*dates.attr('value', '');
        dates.each(function () {
            $.datepicker._clearDate(this);
        });
});*/
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js"></script>

    <script>
        $('.selectpicker').selectpicker({
            //style: 'btn-info',
            size: 10
        });
    </script>

    <script>
        $('#exampleModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
            var imeProjekta = button.data('ime') // Extract info from data-* attributes
            var idProjekta = button.data('id')

            // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
            // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
            var modal = $(this)
            modal.find('#imeProjekta').text(imeProjekta)
            modal.find('#idProjekta').text(idProjekta)
        })
    </script>
    <script>
        function prijavaAjax() {
            modal = $('#exampleModal')
            data = { Id: modal.find('#idProjekta').text() + '', Naziv: modal.find('#imeProjekta').text() + '', Poruka: modal.find('#poruka').val() + '' }
            console.log(data)
             $.ajax({
                 type: "POST",
                 dataType: "json",
                contentType: "application/json;charset=utf-8",
                 url: '@Url.Action("PrijavaZaProjekt", "Zbor")',
                 data: JSON.stringify(data),
                xhrFields: {
                    withCredentials: true
                }
             });
            modal.modal('toggle')
            id = modal.find('#idProjekta').text() + ''
            testB = '#B-' + id
            testC = '#T-' + id
            $(testB).hide();
            $(testC).show("slow")
        }


    </script>


}
