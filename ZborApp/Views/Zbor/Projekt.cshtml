                data = { IdCilj: id + '', IdKorisnik: '@Model.IdKorisnik' };
                if ($(gumbKomentar).hasClass("font-weight-bold")) {
                    $.ajax({
                        type: "POST",
                        dataType: "json",
                        contentType: "application/json;charset=utf-8",
                        url: '@Url.Action("UnlajkKomentara", "Zbor")',
                        data: JSON.stringify(data),
                        xhrFields: {
                            withCredentials: true
                        }
                    });
                    brojLajkova = $(brojLajkovaKomentar).text() - 1;
                    $(brojLajkovaKomentar).text(brojLajkova);

                    $(gumbKomentar).removeClass("font-weight-bold");
                }
                else {
                    $.ajax({
                        type: "POST",
                        dataType: "json",
                        contentType: "application/json;charset=utf-8",
                        url: '@Url.Action("LajkKomentara", "Zbor")',
                        data: JSON.stringify(data),
                        xhrFields: {
                            withCredentials: true
                        }
                    });
                    brojLajkova = Number($(brojLajkovaKomentar).text()) + 1;
                    $(brojLajkovaKomentar).text(brojLajkova);

                    $(gumbKomentar).addClass("font-weight-bold");
                }
        }

    </script>

