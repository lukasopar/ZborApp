    <script>
            function lajkObavijesti(id) {
                gumbObavijest = '#BtnO-' + id;
                brojLajkovaObavijest = '#LajkO-' + id;
                data = { IdCilj: id + '', IdKorisnik: '@Model.IdKorisnik' };
                if ($(gumbObavijest).hasClass("btn-outline-secondary")) {
                    $.ajax({
                        type: "POST",
                        dataType: "json",
                        contentType: "application/json;charset=utf-8",
                        url: '@Url.Action("LajkObavijesti", "Zbor")',
                        data: JSON.stringify(data),
                        xhrFields: {
                            withCredentials: true
                        }
                    });
                    brojLajkova = $(brojLajkovaObavijest).val() + 1;
                    $(brojLajkovaObavijest).text(brojLajkova);

                    $(gumbObavijest).removeClass("btn-outline-secondary");
                    $(gumbObavijest).addClass("btn-secondary");
                }
                else {
                    $.ajax({
                        type: "POST",
                        dataType: "json",
                        contentType: "application/json;charset=utf-8",
                        url: '@Url.Action("UnlajkObavijesti", "Zbor")',
                        data: JSON.stringify(data),
                        xhrFields: {
                            withCredentials: true
                        }
                    });
                    brojLajkova = $(brojLajkovaObavijest).text() - 1;
                    $(brojLajkovaObavijest).text(brojLajkova);

                    $(gumbObavijest).removeClass("btn-secondary");
                    $(gumbObavijest).addClass("btn-outline-secondary");
                }


                console.log(brojLajkova)
        }

    </script>

    <script>
