@model ZborApp.Models.ZborViewModels.GalerijaViewModel
@{
    ViewData["Title"] = "Galerija";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.css" rel="stylesheet"/>

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Galerija</h1>
    </div>
    @if(Model.Clan)
    {
        <div>
            <a asp-action="Zbor" asp-controller="Repozitorij" asp-route-id="@Model.IdZbor">Dodavanje i brisanje slika</a>
        </div>
    }
    <div class="row justify-content-center">

        <div class="col-md-8">
            <div class="row">
                @foreach (var slika in Model.Slike)
                {
                    <a href="/Repozitorij/GetZbor/@slika.Id" data-toggle="lightbox" data-gallery="example-gallery" class="col-4" data-type="image" data-title="@slika.Naziv" @if (Model.Clan) { <text>data-footer = "<a href=/Repozitorij/PromjenaProfilneZbor/@slika.Id>Postavi kao profilnui sliku</a>"</text>}>

<img src="/Repozitorij/GetZbor/@slika.Id" class="img-fluid">
                    </a>
                }
            </div>
        </div>
    </div>

@section Scripts{ 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.min.js"></script>
    <script>
        $(document).on('click', '[data-toggle="lightbox"]', function(event) {
                event.preventDefault();
                $(this).ekkoLightbox();
            });
    </script>
}