@model ZborDataStandard.ViewModels.ZborViewModels.PretragaViewModel;
@using ZborDataStandard.Model
@{
    ViewData["Title"] = "Pretraga";
}


<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <div class="row">
        <h1 class="h3 mb-0 text-gray-800">Pretraga</h1>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <!-- Area Chart -->
        <div class="col-12">

            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Zborovi</h6>
                  
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    @foreach(var zbor in Model.Zborovi)
                    {
                        <div class="row" style="align-items:center; margin-bottom:5px">
                            <div>
                                <img src="/Repozitorij/GetZbor/@zbor.IdSlika" alt="profpic" class="img-profile rounded-circle" style="width:40px; height:40px;"> &nbsp;

                            </div>
                            <div>
                                <a asp-action="JavniProfil" asp-controller="Zbor" asp-route-id="@zbor.Id">@zbor.Naziv</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <!-- Area Chart -->
        <div class="col-12">

            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Korisnici</h6>

                </div>
                <!-- Card Body -->
                <div class="card-body">
                    @foreach (var kor in Model.Korisnici)
                    {
                        <div class="row" style="align-items:center; margin-bottom:5px">
                            <div>
                                <img src="/Repozitorij/Get/@kor.IdSlika" alt="profpic" class="img-profile rounded-circle" style="width:40px; height:40px;"> &nbsp;

                            </div>
                            <div>
                                <a asp-action="JavniProfil" asp-controller="Korisnik" asp-route-id="@kor.Id">@kor.ImeIPrezime()</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



